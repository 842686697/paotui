<view class="list_search_box clearfix">
  <input class="list_search float-" placeholder="搜索"></input>
  <image class="list_searchImg float-" src="./search.png"></image>
</view>

<view wx:for="{{list}}" wx:key="_id" data-index="{{index}}" class="{{resizeIndex!=index?listUnSelectStyle:listSelectStyle}}" bindtap="resize">
  
  <image style="border-radius:50%;" class="list_icon float-" src="{{item.icon?item.icon:unLoginIcon}}"></image>
  <view class="float-">
    <view class="list_message">{{item.date}}</view>
    <view class="list_message">{{item.title}}</view>
  </view>
  <image style="float:right;" class="list_img" src="{{item.imgId[0]}}" wx:if="{{resizeIndex!=index}}"></image>

  <block wx:else>
  <image class="list_resizeImg" src="{{item.imgId[1]}}"></image>
  <view style="display:block" class="list_content" >{{item.content}}</view>
  </block>
</view>

<view class="list_add" bindtap="toPublish">发布</view>