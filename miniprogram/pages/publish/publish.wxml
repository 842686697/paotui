<view class="top_box">
<image src="{{userIcon}}" class="top_icon float-"></image>
<view class="top_message_box float-">
  <view class="top_username">{{userName}}</view>
</view>
</view>
<view class="bot_box">
<view class="bot_text_box">
  <input class="bot_text_title" placeholder="标题" maxlength="10"></input>
  <textarea class="bot_text_area" maxlength="140" placeholder="内容"></textarea>
</view>
<view class="bot_tags_box">
  <view class="bot_tags_type float-" bindtap="chooseChange">
    <view class="bot_type_get {{choose?chooseClass:unChooseClass}}" >{{tags}}</view>
  </view>
  <button style="height: 100%;width:70%;border-radius:20rpx;" bindtap="upload" class="bot_tags_img float-">点击上传图片(最多3张)</button>
</view>
</view>

<view class="confirm_button" bindtap="sendConfirm">提交</view>



