page{
  height: 100%;
  width: 100%;
}
.float-{
  float: left;
}
.top_box{
  height: 120rpx;
  width: 100%;
  margin: 30rpx 0 20rpx 20rpx;

}
.top_icon{
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  border: 1px black solid;
}
.top_message_box{
  height: 60%;
  width: 60%;
  margin-left:30rpx;
  line-height: 60rpx;
}
.top_username{
  box-sizing: border-box;
  padding: 0 20rpx 0;
  color: #1AFD9C
}
.top_time{
  box-sizing: border-box;
  display: inline-block;
  padding: 5rpx 20rpx 5rpx;
  margin-left:20rpx; 
  color: white;
  background: lightgray;
  border-radius: 40rpx;
}
.bot_box{
  width: 100%;
  height: 60%;
}
.bot_text_box{
  height: 100%;
  width: 100%;
}
.bot_text_title{
  padding: 20rpx;
  font-size: 45rpx;
  height: 10%;
}
.bot_text_area{
  padding: 20rpx;
  height: 75%;
  width: 95%;
  border-top: 4rpx solid lightgray;
}
.bot_tags_box{
  height: 100rpx;
  width: 100%;
}
.bot_tags_type{
  width:50%;
  height: 100%;
}
.bot_tags_img{
  font-size: 30rpx;
  height: 100%;
  width:  50%;
  display:flex;
  align-items:center;
  justify-content:center;
  background: lightgray
}
.bot_type_get{
  box-sizing: border-box;
  height: 100%;
  width:  50%;
  display:flex;
  align-items:center;
  justify-content:center;
  border-right: 2rpx solid lightgray;
  border-bottom: 2rpx solid lightgray;
  border-bottom-left-radius: 30rpx;
  border-top-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.bot_type_loss{
  box-sizing: border-box;
  height: 100%;
  width:  50%;
  display:flex;
  align-items:center;
  justify-content:center;
  border-bottom: 2rpx solid lightgray;
  border-bottom-left-radius: 30rpx;
  border-top-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.choose{
  background: lightblue;
  box-shadow:0px 1rpx 5rpx #000000 inset;
  transition: all 0.5s;
}
.unchoose{
  background:white;
}