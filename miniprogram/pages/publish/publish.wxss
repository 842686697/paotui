page{
  height: 100%;
  width: 100%;
}
.float-{
  float: left;
}
.top_box{
  height: 120rpx;
  width: 100%;
  margin: 30rpx 0 20rpx 20rpx;

}
.top_icon{
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.top_message_box{
  height: 60%;
  width: 60%;
  margin-left:30rpx;
  line-height: 60rpx;
}
.top_username{
  box-sizing: border-box;
  padding:30rpx 10rpx ;
  color: black;
}
.top_time{
  box-sizing: border-box;
  display: inline-block;
  padding: 5rpx 20rpx 5rpx;
  margin-left:20rpx; 
  color: white;
  background: lightgray;
  border-radius: 40rpx;
}
.bot_box{
  width: 100%;
  height: 60%;
}
.bot_text_box{
  height: 100%;
  width: 100%;
}
.bot_text_title{
  box-sizing: border-box;
  padding: 20rpx;
  margin-bottom: 10rpx;
  height: 15%;
  width:100%;
  border-radius: 20rpx;
  border: 4rpx solid lightgray;
}
.bot_text_area{
  box-sizing: border-box;
  padding: 20rpx;
  height: 75%;
  width: 100%;
  border-radius: 20rpx;  
  border: 4rpx solid lightgray;
}
.bot_tags_box{
  height: 100rpx;
  width: 100%;
}
.bot_tags_type{
  width:30%;
  height: 100%;
  border-radius: 50rpx;
  background: lightblue;
  overflow: hidden
}
.choose{
  background:white;
  transition: all 0.5s;
  margin:5% 5% 5% 5%;
  box-shadow: 5rpx 0 15rpx #888888;
}
.unchoose{
  background:white;
  transition: all 0.5s;
  margin:5% 5% 5% 45%;
  box-shadow: -5rpx 0 15rpx #888888;
}
.bot_type_get{
  height: 80%;
  width:  50%;
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius: 50rpx;
}
.bot_tags_img{
  font-size: 30rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  background: lightgray
}
.confirm_button{
  height:100rpx;
  line-height:100rpx;
  width:250rpx;
  text-align:center;
  border-radius:50rpx;
  background:lightblue;
  margin:150rpx auto;
  color:white;
}