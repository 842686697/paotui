<view class="top_box">

  <view class="user_box clearfix">
    <view class="user_icon_box float- clearfix">
      <image src="{{hasLogin?icon:unLoginIcon}}" class="user_icon float-"></image>
      <block>
        <button style="height:100rpx;width:200rpx;" class="user_button" bindtap="login" wx:if="{{!hasLogin}}" >登陆</button>
        <view class="user_name float-" wx:else>{{nickName}}</view>
      </block>
    </view>
    <view class="user_message_box float-">
      <view class="user_message"></view>
    </view>
  </view>
</view>
<view class="setting" bindtap="toMyPublish">我发布的</view>
